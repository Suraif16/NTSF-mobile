<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Login"
    tools:ignore="ExtraText">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="78dp"
        android:layout_height="0dp"
        android:layout_below="@id/NTSF"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="58dp"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toTopOf="@+id/Fine"
        app:layout_constraintStart_toStartOf="@+id/NTSF"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/NTSF"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="185dp"
        android:paddingStart=".5in"
        android:text="National Traffic Spot Fine System"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/done"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints,RtlSymmetry" />

    <TextView
        android:id="@+id/Fine"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="549dp"
        android:gravity="center"
        android:text="Fine added Successfully"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        tools:ignore="MissingConstraints,RtlSymmetry" />

    <ImageView
        android:id="@+id/done"
        android:layout_width="83dp"
        android:layout_height="0dp"
        android:layout_marginBottom="41dp"
        android:contentDescription="Done"
        android:src="@drawable/done"
        app:layout_constraintBottom_toTopOf="@+id/FineDetails"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NTSF"
        tools:ignore="InOrMmUsage,MissingConstraints" />

    <TextView
        android:id="@+id/FineDetails"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="102dp"
        android:layout_marginBottom="99dp"
        android:gravity="center"
        android:text="Fine No :"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/Okaybtn"
        app:layout_constraintEnd_toStartOf="@+id/FineNo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/done"
        tools:ignore="MissingConstraints,RtlSymmetry" />

    <TextView
        android:id="@+id/FineNo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="109dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/FineDetails"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/FineDetails"
        tools:ignore="MissingConstraints,RtlSymmetry" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/Okaybtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/FineNo"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="164dp"
        android:backgroundTint="#2F556A"
        android:paddingHorizontal=".5in"
        android:text="okay"
        android:textStyle="bold"
        app:cornerRadius="15in"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FineDetails"
        tools:ignore="InOrMmUsage,MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>